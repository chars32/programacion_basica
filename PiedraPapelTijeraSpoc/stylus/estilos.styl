body
	background-color #333366
	margin 0
h1
	margin 0
	padding-top .5em

.centrar
	text-align center


.wrapper
	margin 0 auto
	max-width 900px
	padding 0 1.5%
	


.titulo
	text-align center

.instrucciones
	p 
		text-align justify

.video
	iframe
		width 100%
		height 250px

.opciones
	ul
		list-style none
		text-align center
		padding 0

		li
			background-color white
			display inline-block
			border 1px solid gray
			width 18%
			&:hover
				background-color graylight
				box-shadow 0px 0px 15px #888888
				
			img
				width 55px
			span
				display block
				text-align center

.usuario
.vs 
.pc
	display inline-block
	width 32%
	margin 0 auto

.vs
	vertical-align middle
	font-size 1.5em

.usuario
	img
		width 100%

.pc
	img
		width: 100%

#resultado
	background-color gray
	text-align center
	padding 1em
	span
		font-size 2em

@media screen and (min-width:500px)

	.titulo
		font-size 2em

	.instrucciones
		p 
			display inline-block
			width 45%
			vertical-align top 
			margin 0
			font-size 1.2em

		.video
			display inline-block
			width 50%
			margin-left .5em



			

